<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/app_bg_champ" />
            <gradient android:angle="-90" android:endColor="@color/app_bg_champ" android:startColor="#2F4473" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/app_bg_champ" />
            <solid android:color="@color/app_bg_champ" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/app_bg_champ" />
            <gradient android:angle="-90" android:endColor="@color/app_bg_champ" android:startColor="#3F587E" />
        </shape>
    </item>
</selector>