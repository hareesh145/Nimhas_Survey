                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layoutDirection="rtl"
                            android:text="Yes, in the past 3 months"
                            android:textAlignment="textStart" />

                        <RadioButton
                            android:id="@+id/yes33"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layoutDirection="rtl"
                            android:text="Yes, but not in the past 3 months"
                            android:textAlignment="textStart" />

                    </RadioGroup>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/bg_btn_background"
                            android:text="@string/calculate"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/substance_score_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/rcads_score"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Substance(Alcohol)_score "
                                android:textAllCaps="false"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/alcoholSubstance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/substance_score_txt"
                                android:background="@drawable/edit_text_border"
                                android:hint="15"
                                android:padding="10dp"
                                android:textAllCaps="false"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/substance_other_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/alcoholSubstance"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Substance(Other)_score "
                                android:textAllCaps="false"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/otherSubstance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/substance_other_txt"
                                android:background="@drawable/edit_text_border"
                                android:hint="15"
                                android:padding="10dp"
                                android:textAllCaps="false"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/substance_injectable"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/otherSubstance"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Substance(injectable drug)_score "
                                android:textAllCaps="false"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/injectableDrugSubstance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/substance_injectable"
                                android:background="@drawable/edit_text_border"
                                android:hint="15"
                                android:padding="10dp"
                                android:textAllCaps="false"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/assistResult_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/injectableDrugSubstance"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="ASSIST Result "
                                android:visibility="gone"
                                android:textAllCaps="false"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/assistResult"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_below="@+id/assistResult_txt"
                                android:background="@drawable/edit_text_border"
                                android:hint="15"
                                android:padding="10dp"
                                android:textAllCaps="false"
                                android:textColor="#000000" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:onClick="@{handlers::onClickGoToResult}"
                            android:padding="15dp"
                            android:text="@string/go_to_result"
                            android:textAllCaps="false"
                            android:textColor="@color/app_bg_champ" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                android:onClick="@{handlers::onClickPreviousSection}"
                                android:padding="15dp"
                                android:text="Previous Section"
                                android:textAllCaps="false"
                                android:textColor="@color/app_bg_champ" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                android:gravity="right"
                                android:onClick="@{handlers::onClickNextSection}"
                                android:padding="15dp"
                                android:text="Next Section"
                                android:textAllCaps="false"
                                android:textColor="@color/app_bg_champ" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>